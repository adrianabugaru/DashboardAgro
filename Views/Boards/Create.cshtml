@model DashboardAgro.Models.Board

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/create.css" />
    <script type='text/javascript'
            src='https://www.bing.com/api/maps/mapcontrol?callback=GetMap'
            async defer></script>

    <script src="~/js/map4.js"></script>
    <meta charset="utf-8" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Create your own fully custom drawing toolbar and controls." />
    <meta name="keywords" content="Microsoft maps, map, gis, API, SDK, Bing, Bing Maps" />
    <meta name="author" content="Microsoft Bing Maps" />
    <meta name="screenshot" content="screenshot.jpg" />
</head>

<body>
    <br />
    <h1>Create a new land</h1>
    <hr />
    <input type="button" class="btn btn-primary" value="Get Location" onclick="getShapes()" />
    <div id='searchBoxContainer' class="mt-3">
        <input placeholder="Search location..." class="form-control w-25 h-75" type='text' id='searchBox' />
        <input class="btn btn-primary mt-1" type='button' value='Search' onclick='geocode()' />
    </div>

    <br />
    <br />
    <div class="grid-container">
        
        <div class="grid-item" id="first">
            <div id="myMap" style="position:relative;width:600px;height:400px;"></div>
        </div>
        <div class="grid-item" id="second">
            <div class="row">
                <div class="col-md-4 ">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input id="name" asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Location" class="control-label" id="location"></label>
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                        <br />

                    <div id="output"></div>
                <form asp-controller="Boards" asp-action="Index">

                        <div class="form-group">
                            <button onclick="SaveLocation()" type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>



    <div>
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </div>
</body>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</html>
