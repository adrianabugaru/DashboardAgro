@model IEnumerable<DashboardAgro.Models.NewsArticle>

@{
    ViewData["Title"] = "Today's News";
}
<link rel="stylesheet" href="~/css/news.css" />

<h1>Today's News</h1>
 @if(User.Identity.IsAuthenticated)
                {
                    if(User.IsInRole("User"))
                    {
                    <div class="container">

    <div class="posts">
        @foreach (var item in Model) { 
        <div class="post">
            <div class="post__image post__image--1"></div>
            <div class="post__content">
                <div class="post__inside">
                    <div class="post__title">

                        @Html.DisplayFor(modelItem => item.Title)

                        </div>
                    @*<div class="post__excerpt">
                            @Html.DisplayFor(modelItem => item.Description)
                    </div>*@
                        
                        
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">
                        Read more
                        
                    </a>
                </div>
            </div>
        </div>
        }
        
    </div>
</div>
                    }
                    
                        if(User.IsInRole("Administrator"))
                    {
                    
        <p>
            <a class="btn btn-success" asp-action="Create">Create New Article</a>

        </p>
        <div class="container">

            <div class="posts">
                @foreach (var item in Model)
                {
                    <div class="post">
                        <div class="post__image post__image--1"></div>
                        <div class="post__content">
                            <div class="post__inside">
                                <div class="post__title">

                                    @Html.DisplayFor(modelItem => item.Title)

                                </div>
                                @*<div class="post__excerpt">
                    @Html.DisplayFor(modelItem => item.Description)
                    </div>*@


                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">
                                    Read more

                                </a>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>

                    }
                    }




