@model DashboardAgro.Models.NewsArticle

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/newsDetails.css" />



<main>
    <section>
        <h1>@Html.DisplayFor(model => model.Title)</h1>
        <br\>
        <hr />
            <button class="intro btn btn-secondary" onclick="window.open('@Model.Website')">
           Read more on the official website
        </button>

            <br\>
                <hr />
        <article>
            
            <p>
                @Html.DisplayFor(model => model.Description)
            </p>

            </article>
    </section>
</main>
@if(User.Identity.IsAuthenticated)
                {
                    if(User.IsInRole("User"))
                    {
                    <div>
    
    <a class="btn btn-danger" asp-action="Index">Back to List</a>
</div>
                    }
                    
                        if(User.IsInRole("Administrator"))
                    {
                   <div>
    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> 
    <a class="btn btn-danger" asp-action="Index">Back to List</a>
</div>
                    }
                    }


